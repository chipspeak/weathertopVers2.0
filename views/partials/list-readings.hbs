<div class="content box">
<table class="table is-striped is-hoverable is-size-5">
{{> headings}}
{{#each station.readings}}
  {{> chart}}
  <tbody>
    <tr>
      <td>
        {{time}}
      </td>
      <td>
        {{code}}
      </td>
      <td>
        {{temp}}° C
        <br>
        {{fahrenheit}}° F
      </td>
      <td>
        {{windSpeed}}km/hr
      </td>
      <td>
        {{windDirection}}°
      </td>
      <td>
        {{pressure}}hPa
      </td>
      <td>
        <a href="/station/{{../station._id}}/deletereading/{{_id}}" class="button is-danger">
          <i class="fa-solid fa-circle-xmark"></i>
        </a>
      </td>
      <td>
        <a href="/station/{{../station._id}}/editreading/{{_id}}" class="button is-info">
          <i class="fa-solid fa-pen-to-square"></i>
        </a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
  <div class="column is-half">
    {{> add-report}}
  </div>
</div>
  {{> add-reading}}





