<div class="ui segment" id="chart1">
<script>
  const data1 = {
    labels: [
      {{#each labels}}
        "{{this}}",
      {{/each}}
    ],
    datasets: [
      {
        name: "Temperature in degrees celsius", type: "line",
        values: [
          {{#each tempTrend}}
            {{this}},
          {{/each}}
        ]
      }
    ]
  }
  const chart1 = new frappe.Chart("#chart1", {
    title: "Temperature forecast",
    data: data1,
    type: 'line',
    height: 200,
  })
</script> 
</div>
