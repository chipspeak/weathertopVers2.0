{{> menu active="profile"}}

<section class="content box">
  <div class="columns">
    <div class="column is-half">
      <figure class="image has-background-white">
        <img alt="profile page weather icon image" title="profile page weather icon image" src="https://cdn.glitch.global/ae766124-e8c7-4be8-bcda-ed5853cf7e22/icons.png?v=1690798937922">
      </figure>
    </div>
    <div class="column is-half">
      <form action="/profile/updateprofile/{{user._id}}" method="POST">
        <h3 class="subtitle">Edit Personal Details</h3>
        <div class="field is-horizontal field-body">
          <div class="field">
            <label class="label">First Name</label>
            <p class="control has-icons-left">
              <input class="input" type="text" placeholder="{{user.firstName}}" name="firstName">
              <span class="icon is-small is-left">
                  <i class="fa-solid fa-file-signature"></i>
              </span>
            </p>
          </div>
          <div class="field">
            <label class="label">Last Name</label>
            <p class="control has-icons-left">
              <input class="input" type="text" placeholder="{{user.lastName}}" name="lastName">
              <span class="icon is-small is-left">
                  <i class="fa-solid fa-file-signature"></i>
              </span>
            </p>
          </div>
        </div>
        <div class="field">
          <label class="label">Password</label>
          <p class="control has-icons-left">
            <input class="input" type="password" name="password">
            <span class="icon is-small is-left">
                <i class="fa-solid fa-unlock-keyhole"></i>
            </span>
          </p>
        </div>
        <br>
        <button class="button is-link is-info is-outlined">Update profile<i
            class="fa-solid fa-user-check pl-2"></i></button>
        <a href="/accounts/deleteProfile" class="button is-danger is-outlined ml-2"> Delete profile<i
            class="fa-solid fa-user-xmark pl-2"></i></a>
      </form>
    </div>
  </div>
</section>