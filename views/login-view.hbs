{{> welcome-menu active="login"}}
<section class="content box">
  <div class="columns">
    <div class="column is-half">
      <form action="/authenticate" method="POST">
        <h3 class="subtitle">Log-in</h3>
        <div class="field">
          <label class="label">Email</label>
          <p class="control has-icons-left">
            <input class="input" placeholder="Email" name="email" field>
            <span class="icon is-small is-left">
              <i class="fa-solid fa-envelope"></i>
            </span>
          </p>
        </div>
        <div class="field">
          <label class="label">Password</label>
          <p class="control has-icons-left">
            <input class="input" type="password" name="password" required>
            <span class="icon is-small is-left">
              <i class="fa-solid fa-unlock-keyhole"></i>
            </span>
          </p>
        </div>
        <button class="button is-link is-outlined is-info">Login<i class="fa-solid fa-right-to-bracket pl-2"></i>
        </button>
      </form>
    </div>
    <div class="column is-half">
      <figure class="image has-background-info">
        <img alt="login/signup page weather icon image" title="login/signup page weather icon image" src="https://cdn.glitch.global/ae766124-e8c7-4be8-bcda-ed5853cf7e22/icons.png?v=1690798937922">
      </figure>
    </div>
  </div>
</section>